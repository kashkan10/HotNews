@model MySite.ViewModels.LoginModel

@{
    ViewData["Title"] = "HoT News";
}
    <div style="padding:15px; max-width:500px;">
        <h2>Вход на сайт</h2>

        <a asp-action="Register" asp-controller="Account">Регистрация</a>
        <p />
        <form asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
            <div class="form-group row">
                <label asp-for="Email" class="col-sm-2 col-form-label">Email</label>
                <div class="col-sm-10">
                    <input type="email" asp-for="Email" class="form-control" id="inputEmail3" required>
                </div>
                <span asp-validation-for="Email" />
            </div>
            <div class="form-group row">
                <label asp-for="Password" class="col-sm-2 col-form-label">Password</label>
                <div class="col-sm-10">
                    <input asp-for="Password" type="password" class="form-control" id="inputPassword3" required>
                </div>
                <span asp-validation-for="Password" />
            </div>
            <div class="validation" asp-validation-summary="ModelOnly" />
            <div>
                <div class="form-group">
                    <input type="submit" value="Войти" class="btn btn-outline-dark" />
                </div>
            </div>
        </form>
    </div>