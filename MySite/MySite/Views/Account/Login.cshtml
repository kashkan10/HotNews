@model MySite.ViewModels.LoginModel

@{
    ViewData["Title"] = "HoT News";
}
<div style="max-width:500px;">
    <h2>Вход на сайт</h2>

    <a asp-action="Register" asp-controller="Account">Регистрация</a>
    <p />
    <form asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
        <div class="form-group row">
            <label asp-for="Nickname" class="col-sm-2 col-form-label">Никнейм</label>
            <div class="col-sm-10">
                <input type="text" asp-for="Nickname" class="form-control" id="inputEmail3" required>
                <span asp-validation-for="Nickname"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Password" class="col-sm-2 col-form-label">Пароль</label>
            <div class="col-sm-10">
                <input asp-for="Password" type="password" class="form-control" id="inputPassword3" required>
                <span asp-validation-for="Password"></span>
            </div>
        </div>
        <div class="validation" asp-validation-summary="ModelOnly" />
        <div>
            <div class="form-group">
                <input type="submit" value="Войти" class="btn btn-danger btn-sm" />
            </div>
        </div>
    </form>
</div>