@model MySite.ViewModels.RegisterModel

@{
    ViewData["Title"] = "HoT News";
}

<div style="max-width:500px;">
    <h2>Регистрация</h2>
    <p />
    <form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
        <div class="validation" asp-validation-summary="ModelOnly"></div>
        <div>
            <div class="form-group row">
                <label asp-for="Email" class="col-sm-4 col-form-label">Email</label>
                <div class="col-sm-8">
                    <input type="email" asp-for="Email" class="form-control" id="inputEmail3" required>
                    <span asp-validation-for="Email"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Nickname" class="col-sm-4 col-form-label">Никнейм</label>
                <div class="col-sm-8">
                    <input type="text" asp-for="Nickname" class="form-control" id="inputNickname3" required>
                    <span asp-validation-for="Nickname"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Password" class="col-sm-4 col-form-label">Пароль</label>
                <div class="col-sm-8">
                    <input asp-for="Password" type="password" class="form-control" id="inputPassword3" required>
                    <span asp-validation-for="Password"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="ConfirmPassword" class="col-sm-4 col-form-label">Повторите пароль</label>
                <div class="col-sm-8">
                    <input asp-for="ConfirmPassword" type="password" class="form-control" id="inputPasswordRe3" required>
                    <span asp-validation-for="ConfirmPassword"></span>
                </div>
            </div>
            <div>
                <div class="form-group">
                    <input type="submit" value="Зарегистрироваться" class="btn btn-danger btn-sm" />
                </div>
            </div>
        </div>
    </form>
</div>