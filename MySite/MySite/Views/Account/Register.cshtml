@model MySite.ViewModels.RegisterModel

@{
    ViewData["Title"] = "HoT News";
}

    <div style="padding:15px; max-width:500px;">
        <h2>Регистрация</h2>
        <p />
<form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly" />
    <div>
        <div class="form-group row">
            <label asp-for="Email" class="col-sm-4 col-form-label">Email</label>
            <div class="col-sm-8">
                <input type="email" asp-for="Email" class="form-control" id="inputEmail3" required>
            </div>
            <span asp-validation-for="Email" />
        </div>
        <div class="form-group row">
            <label asp-for="Password" class="col-sm-4 col-form-label">Password</label>
            <div class="col-sm-8">
                <input asp-for="Password" type="password" class="form-control" id="inputPassword3" required>
            </div>
            <span asp-validation-for="Password" />
        </div>
        <div class="form-group row">
            <label asp-for="ConfirmPassword" class="col-sm-4 col-form-label">Повторите пароль</label>
            <div class="col-sm-8">
                <input asp-for="ConfirmPassword" type="password" class="form-control" id="inputPassword3" required>
            </div>
            <span asp-validation-for="ConfirmPassword" />
        </div>
        <div>
            <div class="form-group">
                <input type="submit" value="Регистрация" class="btn btn-outline-dark" />
            </div>
        </div>
    </div>
</form>
</div>