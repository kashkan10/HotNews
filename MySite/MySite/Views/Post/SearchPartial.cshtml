@model IEnumerable<MySite.Models.Post>

@{ int counter = 0;}
@foreach (var post in Model)
{
    if (counter != 0)
    {
        <hr />
    }
    <div class="row">
        <div class="col-3">
            @if (post.Image != null)
            {
                <a href="/viewPost/@post.Id"><img class="search-img-small" src="data:image/jpg;base64,@Convert.ToBase64String(post.Image)" /></a>
            }
        </div>
        <div class="col">
            <div>
                <a class="a-title" href="/viewPost/@post.Id"><h3 class="a-title" style="font-size:15px;padding-top:10px;">@post.Title</h3></a>
            </div>
        </div>
    </div>
    counter++;
}