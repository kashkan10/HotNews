@model IEnumerable<MySite.Models.Post>
@{
    ViewData["Title"] = "HoT News";
}

@if (Model.Count() != 0)
{
    <div style="padding-top:15px; text-align:center">
        <h3>@Model.First().Title</h3>
        <p>@Html.Raw(Model.First().Text)</p>
    </div>

    int counter = 0;
    int numOfComments = 0;

    @foreach (var post in Model.Reverse())
    {
        numOfComments = 0;

        if (counter < Model.Count() - 1)
        {

            <hr />
            <div class="row" style="padding:10px">
                <div class="col-md-3">
                    @if (post.Image != null)
                    {
                        <a href="/api/viewPost/@post.Id"><img  src="data:image/jpg;base64,@Convert.ToBase64String(post.Image)" /></a>
                    }
                </div>
                <div class="col-md" style="margin:5px;">
                        <div>
                            <a class="a-title" href="/api/viewPost/@post.Id"><h3 href="/api/viewPost/@post.Id" class="a-title">@post.Title</h3></a>
                        </div>
                        <div>
                            <div class="buttons-block">
                                @if (User.IsInRole("admin"))
                                {
                                    <input class="btn-dark" type="button" value="Edit" onClick='location.href="/api/editPost/@post.Id"'>
                                    <input class="btn-dark" type="button" value="Delete" onClick='location.href="/api/deletePost/@post.Id"'>
                                }

                            </div>
                        </div>
                    <div class="data">
                        @if (post.Comments != null)
                        {
                            numOfComments = post.Comments.Count();
                        }

                        <a style="text-align:end" href="/api/viewPost/@post.Id#comments">Комментарии(@numOfComments)</a>
                        <time>@post.Date.ToLongDateString(), @post.Date.ToShortTimeString()</time>
                    </div>
                </div>
            </div>

        }
        counter++;
    }

}

@if (User.IsInRole("admin"))
{
    <input class="new-post-button" type="button" value="+" onClick='location.href="/api/newPost"'>
}

